{
  "name": "sillage",
  "version": "0.0.1",
  "description": "A powerful terminal display library.",
  "author": "imtaotao",
  "scripts": {
    "dev": "tsup --watch",
    "build": "rimraf dist && tsup",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "format": "prettier --write --parser typescript --ignore-path=.prettierignore \"tsup.config.ts|test.*s|(src|test|dist)/**/*.((m)?js|ts?(x))\""
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "node": "./dist/index.mjs",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "unpkg": "./dist/index.global.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
   "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imtaotao/sillage.git"
  },
  "bugs": {
    "url": "https://github.com/imtaotao/sillage/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "packageManager": "pnpm@9.1.3",
  "dependencies": {
    "ora": "^8.2.0",
    "pino": "^9.9.4",
    "winston": "^3.17.0",
    "log-update": "^6.1.0",
    "picocolors": "^1.1.1",
    "marked": "^16.2.1",
    "blessed": "^0.1.81",
    "terminal-kit": "^3.1.2",
    "cli-table3": "^0.6.5",
    "cli-progress": "^3.12.0",
    "cli-highlight":"^2.1.11",
    "aidly": "1.36.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/minimist": "^1.2.5",
    "@vitest/coverage-v8": "^1.6.0",
    "esbuild-plugin-replace": "^1.4.0",
    "tsx": "^4.17.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "minimist": "^1.2.8",
    "tsup": "^8.3.5",
    "typescript": "^5.8.2",
    "vitest": "^1.6.0"
  }
}
